<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    tools:context="com.android.attendance.activity.MainActivity">

    <ImageView
        android:layout_width="700dp"
        android:layout_height="350dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/wave2" />

    <ImageView
        android:layout_width="700dp"
        android:layout_height="850dp"
        android:src="@drawable/wave"
        android:layout_marginTop="490dp"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:layout_marginTop="250dp"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:src="@drawable/std"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="119dp"
        android:layout_height="89dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/isi" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="111dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/universite_de_tunis_1_removebg_preview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISI ABSENCE SYSTEM"
        android:layout_marginLeft="50dp"
        android:textSize="15pt"
        android:layout_marginTop="550dp"
        android:textStyle="bold"
        android:textColor="#789DBC"
        />

    <Button
        android:id="@+id/buttonstart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="750dp"
        android:layout_marginLeft="100dp"
        android:layout_centerHorizontal="true"
        android:shadowColor="@color/app_background"
        android:textColor="@color/offBlue"
        android:textStyle="bold"
        android:background="@drawable/boarder_buttons1"
        android:text="Commencer" />


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonstart"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-73dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="AAA"
        android:layout_below="@id/progress"
        android:layout_marginLeft="200dp"
        />


</RelativeLayout>